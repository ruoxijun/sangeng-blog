<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoxijun.mapper.MenuMapper">

    <resultMap id="BaseResultMap" type="com.ruoxijun.domain.entity.Menu">
        <id property="id" column="id"/>
        <result property="menuName" column="menu_name"/>
        <result property="parentId" column="parent_id"/>
        <result property="orderNum" column="order_num"/>
        <result property="path" column="path"/>
        <result property="component" column="component"/>
        <result property="frameFlag" column="frame_flag"/>
        <result property="menuType" column="menu_type"/>
        <result property="visible" column="visible"/>
        <result property="status" column="status"/>
        <result property="perms" column="perms"/>
        <result property="icon" column="icon"/>
        <result property="remark" column="remark"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <sql id="Base_Column_List">
        id
        ,menu_name,parent_id,order_num,path,component,
        frame_flag,menu_type,visible,status,perms,
        icon,remark,create_by,create_time,update_by,
        update_time
    </sql>

    <!--  todo 角色状态未判断  -->
    <select id="selectPermsByUserId" resultType="java.lang.String">
        select distinct(m.perms)
        from sys_user_role ur
                 left join sys_role_menu rm on rm.role_id = ur.role_id
                 left join sys_menu m on m.id = rm.menu_id
        where ur.user_id = #{id}
          and m.muen_type in ('C', 'F')
          and m.status = 0
          and m.del_flag = 0
    </select>
</mapper>
